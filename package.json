{
  "name": "11ty-starter-kit",
  "version": "1.0.0",
  "description": "Starter kit with 11ty, Tailwind CSS v4, and Alpine.js",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build:css": "postcss src/css/style.css -o dist/css/style.css",
    "watch:css": "postcss src/css/style.css -o dist/css/style.css --watch",
    "build:js": "esbuild src/js/app.js --bundle --outfile=dist/js/app.js",
    "watch:js": "esbuild src/js/app.js --bundle --outfile=dist/js/app.js --watch",
    "build:eleventy": "eleventy",
    "watch:eleventy": "eleventy --serve",
    "build": "npm-run-all build:*",
    "dev": "npm-run-all --parallel watch:*"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@tailwindcss/postcss": "^4.1.18",
    "alpinejs": "^3.15.3",
    "autoprefixer": "^10.4.23",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.18"
  }
}
