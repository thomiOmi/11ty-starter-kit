{
  "name": "11ty-starter-kit",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "description": "Starter kit with 11ty, Tailwind CSS v4, and Alpine.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production eleventy",
    "dev": "eleventy --serve",
    "prepare": "husky",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-img": "^6.0.4",
    "@resvg/resvg-js": "^2.6.2",
    "@tailwindcss/postcss": "^4.1.18",
    "alpinejs": "^3.15.3",
    "autoprefixer": "^10.4.23",
    "cross-env": "^7.0.3",
    "esbuild": "^0.27.2",
    "postcss": "^8.5.6",
    "satori": "^0.18.3",
    "tailwindcss": "^4.1.18"
  },
  "browserslist": [
    "last 2 versions",
    "> 0.2%",
    "not dead"
  ],
  "devDependencies": {
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "neostandard": "^0.12.2",
    "prettier": "^3.7.4",
    "prettier-plugin-jinja-template": "^2.1.0",
    "prettier-plugin-tailwindcss": "^0.7.2"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,html,md,njk,css}": [
      "prettier --write"
    ]
  }
}
