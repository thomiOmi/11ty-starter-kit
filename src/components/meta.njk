<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>{{ title | default(site.title) }}</title>
<meta name="description" content="{{ description | default(site.description) }}" />
<meta name="author" content="{{ site.author }}" />
<meta name="generator" content="Eleventy" />
<link rel="icon" href="/favicon.ico" />
<link rel="canonical" href="{{ site.url }}{{ page.url }}" />

<!-- Open Graph -->
<meta property="og:title" content="{{ title | default(site.title) }}" />
<meta property="og:description" content="{{ description | default(site.description) }}" />
<meta property="og:type" content="website" />
<meta property="og:url" content="{{ site.url }}{{ page.url }}" />
<meta property="og:image" content="{% ogImage title | default(site.title), page.url %}" />

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content="{{ title | default(site.title) }}" />
<meta name="twitter:description" content="{{ description | default(site.description) }}" />
<meta name="twitter:image" content="{% ogImage title | default(site.title), page.url %}" />
