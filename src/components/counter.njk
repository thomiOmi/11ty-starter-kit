<section class="bg-surface mx-auto max-w-lg rounded-xl p-6 shadow-md" x-data="{ count: 0 }">
  <h2 class="text-body mb-4 text-2xl font-bold">Alpine.js Interactivity</h2>
  <p class="text-muted mb-4">This simple counter demonstrates Alpine.js integration.</p>

  <div class="flex items-center justify-center space-x-4">
    <button
      @click="count--"
      class="rounded-lg bg-red-100 px-4 py-2 text-red-600 transition hover:bg-red-200 focus:ring-2 focus:ring-red-500 focus:outline-none dark:bg-red-900/30 dark:text-red-300 dark:hover:bg-red-900/50"
    >
      Decrease
    </button>

    <span x-text="count" class="text-body w-12 text-center text-3xl font-bold"></span>

    <button
      @click="count++"
      class="rounded-lg bg-green-100 px-4 py-2 text-green-600 transition hover:bg-green-200 focus:ring-2 focus:ring-green-500 focus:outline-none dark:bg-green-900/30 dark:text-green-300 dark:hover:bg-green-900/50"
    >
      Increase
    </button>
  </div>

  <div class="bg-surface-highlight mt-6 rounded-lg p-4" x-show="count > 5" x-transition>
    <p class="text-primary text-center font-semibold">Wow, you're clicking a lot!</p>
  </div>
</section>
